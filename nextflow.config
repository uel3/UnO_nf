//nextflow.config
profiles {
  conda {
    conda.enabled = true
    process {
      withLabel: 'UnO'{
        conda = ""$HOME/.conda/envs/UnO-nf"
      }
      withLabel: 'dastool'{
        conda = ""$HOME/.conda/envs/das_tool" 
      }
      withLabel: 'midas2' {
        conda = ""$HOME/.conda/envs/midas2.0" //this will be changed to MIDAS2 singularity container with modified MIDAS2 script
      }
      withLabel: 'prodigal'{
        conda = "bioconda::prodigal=2.6.3"
      }
    }
  }
  singularity {
      enabled = true
      autoMounts = true
      cacheDir = "$HOME/singularityIMG"
        process {
          withLabel: 'midas2_soon' {
            container = '/scicomp/home-pure/uel3/UnO_nf/MIDAS2_sing/midas2_latest.sif'
      }
    }
  }
  sge {
    process {
      executor     = 'sge'
      penv         = 'smp'
      queue        = 'all.q'
    }
    executor {
      queueSize    = 100
      pollInterval = '15 sec'
    }
  }
}
